
<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> |
      <%= button_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>  
      <%= link_to "Edit", edit_task_path(task),
          meathod: :get %>

    </li>
  <% end %>
</ul>
