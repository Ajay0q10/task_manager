<h1> New Tasks </h1>

<%= form_with model: @task do |f| %>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>

    <div>
    <%= f.submit "Create Task" %>
    </div>
<% end %>


<% if @task.errors.any? %>
    <ul>
    <% @task.errors.full_messages.each do |mes| %>
        <li> <%= mes%> </li>
        <% end %>
        </ul>
    <% end %>